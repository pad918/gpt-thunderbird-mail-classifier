{
    "manifest_version": 2,
    "name": "gptclassifier",
    "description": "A basic Hello World example extension!",
    "version": "1.0",
    "author": "MÃ¥ns Abrahamsson",
    "browser_specific_settings": {
        "gecko": {
            "id": "helloworld@yoursite.com",
            "strict_min_version": "78.0"
        }
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
          "background.js"
        ]
    },
    "permissions": [
        "messagesRead",
        "messagesModify",
        "messagesMove",
        "messagesTags",
        "accountsRead",
        "storage"
    ]
}