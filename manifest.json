{
    "manifest_version": 2,
    "name": "gptclassifier2",
    "description": "A basic Hello World example extension!",
    "version": "1.0",
    "author": "MÃ¥ns Abrahamsson",
    "browser_specific_settings": {
        "gecko": {
            "id": "helloworld@yoursite.com",
            "strict_min_version": "68.0"
        }
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true,
        "browser_style": true
    },
    "background": {
        "scripts": [
          "background.js"
        ]
    },
    "permissions": [
        "storage",
        "messagesRead",
        "messagesModify",
        "messagesMove",
        "messagesTags",
        "accountsRead"
        
    ]
}